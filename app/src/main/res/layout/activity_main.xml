<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/bitmap_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="@string/bitmap_label"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/android_bitmap_image_view"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_below="@+id/bitmap_label_text_view"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_android_bitmap"/>

        <TextView
            android:id="@+id/vector_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/android_bitmap_image_view"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:paddingTop="24dp"
            android:text="@string/vector_drawable_label"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/android_vector_image_view"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_below="@+id/vector_label_text_view"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_android"/>

        <TextView
            android:id="@+id/animated_vector_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/android_vector_image_view"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:paddingTop="24dp"
            android:text="@string/animated_vector_drawable_label"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/animated_android_vector_image_view"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_below="@+id/animated_vector_label_text_view"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_android_animated"/>

    </RelativeLayout>
</ScrollView>